<p id="notice"><%= notice %></p>

<div class="proj-header inlineb">

	<div class="rightinfo inlineb blurb">
		<div class="proj-title inlineb Headings">
			<h2><%= @reading.title%></h2>
		</div>
		<div class="proj-owner inlineb">
			By <%= link_to @reading.student.name, user_path(@reading.student)%>
		</div>
	</div>
</div>

<div class= "proj-video inlineb">
	<iframe src="<%= strip_tags(@reading.youtube_embed)%>" frameborder="0" allowfullscreen></iframe>
</div>
<div class = "proj-donations inlineb blurb">
	<div class="stats inlineb">
		<h4>Number of Donors: <%= @reading.donations.length%></h4>
		<h4>Total: $<%= @reading.total_donation %>.0</h4>
		<div class="progress progress-striped">
		  <div class="bar" style="width: <%= (@reading.total_donation / @reading.goal)*100%>%;">$<%= @reading.total_donation %></div>
		</div>
		<h6>Raised of $<%= @reading.goal%></h6>
		<%if current_user.type == "Alumni" %>
	    	<%= link_to 'Donate', new_reading_donation_path(@reading), class: "btn btn-primary" %>
	    <%end%>
	</div>
	<div class="proj-tags inlineb">
		Tags: <br/>
		<%@reading.tags.each do |tag|%>
			<div class="proj-tag inlineb">
				<%=tag.title%>
			</div>
		<%end%>
	</div>
</div>
<div class ="proj-display blurb">
	<div class="proj-title inlineb wide-width fake-hr">
		<b>Title:</b><%= @reading.title%>
	</div>
	<div class = "proj-descrip inlineb wide-width fake-hr">
		<b>Description:</b> <%= @reading.description%>
	</div>
	<%= link_to 'Back', root_path, :class => 'btn btn-primary' %> 
	<%= link_to 'Updates', reading_updates_path(@reading), :class => 'btn btn-primary'%> 
	<% if @reading.access_level(current_user.id) == "uploader"%>
		<%= link_to 'Edit', edit_reading_path(@reading), :class => 'btn btn-primary' %> 
		<%= link_to 'Create Update', new_reading_update_path(@reading), :class => 'btn btn-primary'%>
		<%if @reading.access_level(current_user.id) == "uploader"%>
			<%= link_to 'Destroy', reading_path(@reading), 
				:method => :delete, 
				:class => 'btn btn-danger', 
				:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } 
				%>
		<%end%>
	<%end%>
</div>




