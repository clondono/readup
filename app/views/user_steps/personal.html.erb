<div class="form-signUp">
  <div class="form">
    <h2 class="form-title">personal info</h2>
    <%= form_for @user, html: {class: "settings-form"}, url: wizard_path do |f| %>



      <div><%= f.label :major, class: "form-label"%>
      <%= f.select :major, options_for_select(majorList)%></div>

      <div><%= f.label :grad_year, class: "form-label" %>
      <%= f.text_field :grad_year%></div>


      <div><%= f.label :avatar, class: "form-label" %>
      <%= f.file_field :avatar %></div>

      <div><%= f.label :first_name, class: "form-label" %>
      <%= f.text_field :first_name %></div>

      <div><%= f.label :last_name, class: "form-label" %>
      <%= f.text_field :last_name%></div>
      
      <div>
        <div style="margin-bottom:10px"><%= f.submit "Continue", class:"btn inlineb btn-primary" %></div>  
       <%= link_to "skip", root_path, class:"btn inlineb btn-danger"%>
      </div>

    <% end %>
  </div>
</div>